<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer_errors').append('<%= j message %>')
  <% end %>
<% else %>
  $("div[class*='answer-cont']").each(function (i, el) {
    if ($(el).hasClass('best-answer-container')) {
      $(el).removeClass('best-answer-container');
    }
  });
  $('.answer-<%= @answer.id %>').addClass('best-answer-container');
<% end %>
